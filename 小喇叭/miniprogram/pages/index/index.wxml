    </view>
    <view class="cu-bar bg-white justify-center">
      <form>
        <view class="cu-form-group margin-top">
          <view class="title">Time</view>
          <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="timeChange">
            <view class="picker">
              {{time}}
            </view>
          </picker>
        </view>
        <view class="cu-form-group">
          <view class="title">Date</view>
          <picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="dateChange">
            <view class="picker">
              {{date}}
            </view>
          </picker>
        </view>
        <view class="cu-form-group margin-top">
          <view class="title">Notification Time</view>
          <picker mode="time" value="{{execTime}}" start="00:00" end="23:59" bindchange="execTimeChange">
            <view class="picker">
              {{execTime}}
            </view>
          </picker>
        </view>
        <view class="cu-form-group">
          <view class="title">Building：{{buildingChosen}}</view>
          <switch class="switch-sex" checked bindchange="buildingChange"></switch>
        </view>
        <view class="cu-form-group">
          <view class="title">Classroom</view>
          <input placeholder="Class room here..." bindinput='getRoom'></input>
        </view>
        <view class="cu-form-group">
          <view class="title">Activity Name</view>
          <input placeholder="Activity name here..." bindinput='getDesc'></input>
        </view>
      </form>
    </view>
    <view class="padding-xl">
      <button class='cu-btn bg-green lg' bindtap='updateActivityInfo'>Submit</button>
    </view>
  </view>
</view>

<canvas catchtap="miao" id="test-canvas" canvas-id="test-canvas"></canvas>

<view class="padding-xs flex align-center bg-white">
  <view class="flex-sub text-center">
    <view class="solid-top text-xs padding">
      <text class="text-gray">Powered By QioNio - A basic yet complete O2O solution \n \n </text>
    </view>
  </view>
</view>

<view class="cu-modal {{modalName=='newMessage'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">全局通知推送</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl">
      警告：全局通知将会通知所有下一次打开小程序的用户
    </view>
    <view class="cu-bar bg-white">
      <view class="action">
        <form>
          <view class="cu-form-group">
            <input placeholder='通知内容' bindinput='getText'></input>
          </view>
        </form>
      </view>
    </view>
    <view class="padding-xl">
      <button class='cu-btn bg-green lg' bindtap='addAlarm'>推送</button>
    </view>
  </view>
</view>